# Configuración del backend MindFit (Node.js)
OPENAI_API_KEY=tu_api_key_de_openai_aqui

# Configuración del servidor
PORT=5000
NODE_ENV=development

# Configuración de la base de datos PostgreSQL local
PGUSER=postgres
PGHOST=localhost
PGDATABASE=mindfit
PGPASSWORD=postgres
PGPORT=5432

# Configuración de la base de datos PostgreSQL en Render (producción)
RENDER_PGUSER=tu_usuario_render
RENDER_PGHOST=tu_host_render.com
RENDER_PGDATABASE=tu_database_render
RENDER_PGPASSWORD=tu_password_render
RENDER_PGPORT=5432

# Configuración de entorno para base de datos
# Valores: 'local' | 'render'
DB_ENVIRONMENT=local

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000,https://mindfit.onrender.com